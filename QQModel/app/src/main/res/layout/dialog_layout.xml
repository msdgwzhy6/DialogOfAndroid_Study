<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"


    android:paddingRight="4dp"
    android:layout_width="124dp" android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/d_iv"
android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/d_bt_1"
        android:layout_alignParentRight="true"
        android:layout_below="@id/d_iv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/photo_cancel_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="ABCDE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/d_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@id/d_bt_1"
        android:layout_width="120dp"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/d_tv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="拍照"
        android:textSize="16sp" />

</RelativeLayout>
